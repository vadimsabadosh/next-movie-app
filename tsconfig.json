{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["es6", "dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"target": "es6",
		"baseUrl": "./",
		"types": ["cypress"]
	},
	"exclude": ["node_modules", "typings"],
	"include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js", "customServer.js"],
	"paths": {
		"@styles/*": ["src/styles/*"]
	}
}
